---
// src/components/Navbar.astro (Dra. Taquichiri)
---

<header class="fixed w-full z-50 font-sans shadow-lg">
    
    <div class="bg-brand-primary text-teal-100 text-[10px] tracking-widest uppercase py-2 border-b border-white/10 relative z-50">
        <div class="container mx-auto px-6 flex justify-between items-center">
            <span class="flex items-center gap-2 font-bold text-white">
                <span class="w-1.5 h-1.5 bg-accent rounded-full animate-pulse"></span>
                Estudio Jurídico Integral
            </span>
            <div class="hidden md:flex gap-6 opacity-90 font-medium">
                <a href="mailto:estudiotaquichiri@gmail.com" class="hover:text-accent transition-colors">Contacto Directo</a>
            </div>
        </div>
    </div>

    <nav class="bg-white/95 backdrop-blur-xl border-b border-teal-100 relative z-40">
        <div class="container mx-auto px-6 h-20 flex justify-between items-center">
            
            <a href="#inicio" class="flex flex-col group z-50">
                <span class="font-serif text-xl md:text-2xl tracking-wide font-black text-brand-dark group-hover:text-brand-primary transition-colors">
                    DRA. TAQUICHIRI
                </span>
                <span class="text-[9px] uppercase tracking-[0.2em] text-slate-400 group-hover:text-accent transition-colors mt-0.5 font-bold">
                    Jesica Pamela Taquichiri
                </span>
            </a>

            <div class="hidden lg:flex items-center gap-8 text-xs font-bold text-brand-dark uppercase tracking-widest">
                <a href="#familia" class="hover:text-accent transition-colors">Familia</a>
                <a href="#penal" class="hover:text-accent transition-colors">Penal</a>
                <a href="#ciudadania" class="hover:text-accent transition-colors">Ciudadanías</a>
                
                <a href="https://wa.me/54911XXXXXXXX" target="_blank" class="bg-brand-dark text-white px-6 py-2.5 rounded-sm hover:bg-accent transition-all shadow-lg hover:-translate-y-0.5">
                    Agendar Cita
                </a>
            </div>

            <button id="menu-toggle" class="lg:hidden text-brand-dark focus:outline-none">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </button>

            <div id="mobile-menu" class="absolute top-full left-0 w-full bg-white border-t border-teal-100 shadow-xl overflow-hidden transition-all duration-500 ease-in-out max-h-0 opacity-0 z-40">
                <div class="flex flex-col p-8 space-y-6 text-center">
                    <a href="#familia" class="mobile-link block text-sm font-bold uppercase tracking-widest text-brand-dark hover:text-accent py-3 border-b border-slate-50">Familia & Divorcios</a>
                    <a href="#penal" class="mobile-link block text-sm font-bold uppercase tracking-widest text-brand-dark hover:text-accent py-3 border-b border-slate-50">Defensa Penal</a>
                    <a href="#ciudadania" class="mobile-link block text-sm font-bold uppercase tracking-widest text-brand-dark hover:text-accent py-3 border-b border-slate-50">Ciudadanías</a>
                    <div class="pt-4">
                        <a href="https://wa.me/54911XXXXXXXX" class="block w-full bg-accent text-white px-6 py-4 text-xs font-bold uppercase tracking-widest hover:bg-brand-dark transition-colors rounded-sm shadow-lg">
                            WhatsApp Directo
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
<script>
    const btn = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    let isOpen = false;
    if(btn && menu) {
        btn.addEventListener('click', () => {
            isOpen = !isOpen;
            if(isOpen) {
                menu.classList.remove('max-h-0', 'opacity-0');
                menu.classList.add('max-h-screen', 'opacity-100');
            } else {
                menu.classList.add('max-h-0', 'opacity-0');
                menu.classList.remove('max-h-screen', 'opacity-100');
            }
        });
    }
</script>